# SQL Sentinel Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection URL for alerts to query
# Examples:
#   SQLite:     sqlite:///path/to/database.db
#   PostgreSQL: postgresql://user:password@host:port/database
#   MySQL:      mysql://user:password@host:port/database
DATABASE_URL=

# =============================================================================
# Email Notification Settings
# =============================================================================

# SMTP server configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=sqlsentinel@example.com
SMTP_USE_TLS=true

# =============================================================================
# Slack Notification Settings
# =============================================================================

# Slack incoming webhook URL
# Get this from: https://api.slack.com/messaging/webhooks
# Example: https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_WEBHOOK_URL=

# =============================================================================
# Webhook Notification Settings
# =============================================================================

# Generic webhook URL for custom integrations
WEBHOOK_URL=

# Authentication header for webhook (optional)
# Example: Bearer your-token-here
WEBHOOK_AUTH_HEADER=

# =============================================================================
# State Management
# =============================================================================

# Path to SQLite database for state tracking
# Default: ./state.db (or /app/state/state.db in Docker)
STATE_DB_PATH=state.db

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Testing Configuration (for integration tests)
# =============================================================================

# Enable real email tests (default: false)
# Set to 'true' to run integration tests with actual SMTP delivery
ENABLE_REAL_EMAIL_TESTS=false

# Enable real Slack tests (default: false)
# Set to 'true' to run integration tests with actual Slack webhook
ENABLE_REAL_SLACK_TESTS=false

# Test Slack channel name (for verification)
TEST_SLACK_CHANNEL=#sqlsentinel-test

# SQL Sentinel Environment Variables Template
# Copy this file to .env and fill in your actual values
# NOTE: .env is gitignored and will not be committed

# SMTP Configuration for Email Notifications
SMTP_HOST=mail.kylegehring.com
SMTP_PORT=26
SMTP_USERNAME=sqlsentinel@kylegehring.com
SMTP_PASSWORD=your-password-here
SMTP_USE_TLS=false
SMTP_FROM_ADDRESS=sqlsentinel@kylegehring.com

# Slack Configuration (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Webhook Configuration (optional)
# WEBHOOK_URL=https://your-webhook-endpoint.com/webhook

# Test Configuration
# Set this to enable integration tests that send real emails
ENABLE_REAL_EMAIL_TESTS=false
TEST_EMAIL_RECIPIENT=sqlsentinel@kylegehring.com

# Set this to enable integration tests that send real Slack messages
# You'll need to create a Slack workspace and incoming webhook first
# See: https://api.slack.com/messaging/webhooks
ENABLE_REAL_SLACK_TESTS=false
TEST_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEST_SLACK_CHANNEL=#sqlsentinel-test

# Set this to enable integration tests that send real webhook requests
# Use a service like webhook.site for testing
ENABLE_REAL_WEBHOOK_TESTS=false
TEST_WEBHOOK_URL=https://webhook.site/your-unique-url
